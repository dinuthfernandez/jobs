# JobForSLSG Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
FLASK_ENV=development
PORT=5000

# Email Configuration (Gmail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=your-email@gmail.com

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Rate Limiting (Optional - uses memory by default)
# REDIS_URL=redis://localhost:6379

# Security (Production)
# Set to False in production for better security
DEBUG=False